<?xml version="1.0" encoding="UTF-8"?> <!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
	<bean id="myScheduler"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="interfaceTrigger"></ref>
			</list>
		</property>
		<property name="autoStartup" value="true"></property>
	</bean>
	<bean id="interfaceTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="interfaceJobDetail">
		</property>
		<property name="cronExpression">
			<!--<value>* */1 * * * ?</value>-->
			<value>0 0 8 * * ?</value>
		</property>
	</bean>
	<!-- cronExpression每天8点执行一次 -->
	 
	<bean id="interfaceJobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="postLiteratureProcessService">
		</property>
		<property name="targetMethod" value="overdueTask" />
		<property name="concurrent" value="false" /> 
	</bean>
	<!-- concurrent:是否允许任务并发执行。当值为false时，表示必须等到前一个线程处理完毕后才再启一个新的线程-->
	<!--<bean id="interfaceMonitor" class="com.tj720.controller.schedule.InterfaceMonitor" />-->
	<!--<bean id="overdueTask" class="com.tj720.service.impl.OverdueTask" />-->

	<!--超期借阅的定时任务-->
	<bean id="postLiteratureProcessService" name="postLiteratureProcessService" class="com.tj720.service.impl.PostLiteratureProcessServiceImpl" />
</beans>